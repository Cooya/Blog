{% extends "./base.twig" %}

{% block content %}

<div class="container">
    <div class="section">
        <div class="columns is-multiline">
            {% for article in articles %}
                <div class="column is-one-third">
                    <a href="/article/{{ article.slugUrl }}">
                        <div class="card large">
                            <div class="card-image">
                                <figure class="image">
                                    <img src="{{ article.image_url }}" alt="Image">
                                </figure>
                            </div>
                            <div class="card-content">
                                <div class="content">
                                    {{ article.abstract }}
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}